package aplicacao;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		int opc, qtdnotas = 0;
		float nota = 0;
		String nome, cpf, admin;
		Sala novasala = new Sala();
		Aluno novoAluno = new Aluno();
		Scanner scan = new Scanner(System.in);
        
		do {
			
			
			System.out.println("Por Favor insira seu ID!");
			admin = scan.nextLine();
			System.out.println("\n--------------");
			System.out.println("       MENU");
			System.out.println("Escolha uma opção");
			System.out.println("1 - Inserir aluno");
			System.out.println("2 - Listar alunos");
			System.out.println("3 - Situações");
			System.out.println("0 - Sair");

			opc = scan.nextInt();
			scan.nextLine();

			switch (opc) {
			case 1:

				System.out.println("\nNome:"); // Roberto
				nome = scan.nextLine();

				System.out.println("\nCPF:"); // 141
				cpf = scan.nextLine();

				novoAluno = new Aluno(nome, cpf);// Roberto 141

				System.out.println("\nQuantas notas?");
				qtdnotas = scan.nextInt();
				for (int i = 0; i < qtdnotas; i++) {
					System.out.println("\nNota" + (i + 1));
					nota = scan.nextFloat();
					novoAluno.inserenotas(nota);
				}
				novasala.insereAluno(novoAluno);
				
				break;
			case 2:
				System.out.println("\nOlá, administrador... Esta aqui é a lista de alunos!!!");
				novasala.listarAlunos();
				break;
			case 3:
				System.out.println("\nOlá, administrador... Esta aqui é a lista de alunos!!!");
				novasala.listarsituacoes();
				break;
			case 0:
				System.out.println("\nSaindo...");
				break;
			default:
				System.out.println("/nOçãoinvalida");
			}
		} while (opc != 0);
		scan.close();
	}
}
