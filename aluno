package aplicacao;

import java.util.ArrayList;

public class Aluno {
	float total = 0;
	String nome, cpf, situacao = "reprovado";
	ArrayList<Float> notasaluno = new ArrayList<>();

	public Aluno() {

	}

	public Aluno(String nome, String cpf) { // o construtor recebe o nome e o cpf (Roberto 141)
//Seta a variavel que vem da outra classe. 
		setNome(nome); // joao vai para setNome
		setCpf(cpf); // 141 vai para setCpf
	}

	void inserenotas(float nota) {
		notasaluno.add(nota);
	}

//Get serve para pega a variavel de uma classe e retorna a variavel pra outra classe
	public String getNome() {
		return nome;
	}

//Ser serve para falar que a variavel da outra classe, vai para a a variavel desta classe.
	public void setNome(String nome) {
		// Este nome, vai receber o nome da outra classe, entçao ele recebe "Roberto"
		this.nome = nome;
	}

	public String getCpf() {
		return cpf;
	}

	public void setCpf(String cpf) {
		this.cpf = cpf;
	}

	void listar() {
		System.out.println("\nNome: " + this.nome);
		System.out.println("Cpf: " + this.cpf);

		for (int i = 0; i < notasaluno.size(); i++)
			System.out.println("Nota " + (i + 1) + ":" + this.notasaluno.get(i));
	}

	void mostrasituacao() {
		System.out.println("\nNome:" + this.nome);
		System.out.println("\nTotal:" + this.total);
		System.out.println("\nSituação: " + this.situacao);
	}

	void calculanotas() {
		for (float notaDaLista : notasaluno) {
			total = total += notaDaLista;
		}
		if (total >= 70) {
			this.situacao = "Aprovado";
		} else {
			this.situacao = "Reprovado";
		}
	}

	public ArrayList<Float> getNotasaluno() {
		return notasaluno;
	}

	public void setNotasaluno(ArrayList<Float> notasaluno) {
		this.notasaluno = notasaluno;
	}

}
